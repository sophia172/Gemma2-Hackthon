{
  "manifest_version": 3,
  "name": "ByteTheNews",
  "version": "1.0",
  "description": "Gives a summary of the content of the webpage.",
  "permissions": ["activeTab", "scripting", "storage"],
  "host_permissions": ["<all_urls>"],
  "js": ["content.js"],
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_popup": "popup.html",
    "default_icon": "icon.png"
  }
}
